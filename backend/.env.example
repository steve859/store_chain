# Backend environment variables
# Copy to .env and adjust values

PORT=3000
JWT_SECRET=your-secret-key-change-it

# Local Postgres (matches docker-compose defaults when using localhost port 5432)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/store_chain

# Neon (cloud Postgres) example (use Direct connection, usually requires TLS)
# DATABASE_URL=postgresql://USER:PASSWORD@HOST/DB?sslmode=require

# Optional Redis (used for lightweight caching)
REDIS_URL=redis://localhost:6379

# Optional: catalog cache TTL in seconds (clamped to 30â€“60)
CATALOG_CACHE_TTL_SECONDS=45
