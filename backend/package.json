{
  "name": "store_chain_backend",
  "version": "1.0.0",
  "description": "Backend skeleton for a convenience store chain management system",
  "main": "dist/server.js",
  "scripts": {
    "postinstall": "prisma generate --schema prisma/schema.prisma",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:docker": "ts-node --files src/server.ts",
    "seed": "ts-node --files prisma/seed.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/steve859/store_chain_backend.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/steve859/store_chain_backend/issues"
  },
  "homepage": "https://github.com/steve859/store_chain_backend#readme",
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.12.12",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "ioredis": "^5.9.2",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.0",
    "node-cron": "^4.2.1",
    "pg": "^8.16.3",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typescript": "~5.5.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prisma": "^7.2.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/tests/jest.setup.ts"
    ],
    "testMatch": [
      "**/tests/**/*.test.ts"
    ]
  },
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "keywords": []
}
